@model IEnumerable<Product>
@using KheyaShop.Data.ViewModels

@{
    ViewData["Title"] = "Products";

}


<div class="row">
    <div class="col-md-12">
        @foreach (var item in Model)
            {
        <div class="col-md-3" style="float:left; margin-bottom:5%"; >
            
                <div class="col-md-12">
                    <a asp-controller="Products" asp-action="SingleProduct" asp-route-id="@item.Id">
                        <img src="~/images/@item.ProductImage" alt="item.Name" width="150" height="150" style="margin-left:25%" />
                        <p class="card-text text-center"><b>@item.ProductName</b></p>
                    </a>
                    <p class="card-text text-center"><b>Price: </b>@item.ProductPrice.ToString("c")</p>
                    <a style="font-family: 'Lato', sans-serif; font-size:16px;margin-left:28%" class="btn btn-outline-primary" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@item.Id">
                        <i class="bi bi-cart4"></i>Add To Cart
                    </a>
                </div>
            

        </div>
        }
    </div>
</div>



