@model CategoriesVM
@using KheyaShop.Data.ViewModels;
@{
    ViewData["Title"] = "Create a new category";
}

<div class="row">
    <p>
        <h4>
            Create a new category
        </h4>
    </p>
    <hr />
</div>
<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="custom-file-label" for="customFile">Upload Product Image</label>
                <input asp-for="CategoryImageFile" class="custom-file-input" id="customFile">
                <span asp-validation-for="CategoryImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentCategory" class="control-label"></label>
                <select asp-for="ParentCategory" asp-items="ViewBag.Categories" class="form-control">
                    <option value="0">None</option>
                </select>
                <span asp-validation-for="ParentCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryMain" class="control-label"></label>
                <span asp-validation-for="CategoryMain"></span>
                <input asp-for="CategoryMain" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success float-right" />
                <a class="btn btn-outline-info" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>



</div>

@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
