@model Category
@{
    ViewData["Title"] = "Delete a category";
}

<div class="row">
    <p>
        <h4>
            Delete a category
        </h4>
    </p>
    <hr />
</div>
<div class="row">
    <div class="col-md-6 offset-3">

        <div class="form-group">
            <label asp-for="ParentCategory" class="control-label"></label>
            <input asp-for="ParentCategory" class="form-control" readonly />
            <span asp-validation-for="ParentCategory" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryMain" class="control-label"></label>
            <span asp-validation-for="CategoryMain"></span>
            <input asp-for="CategoryMain" type="text" class="form-control" readonly />
        </div>

        <div class="form-group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm Delete" class="btn btn-danger float-right" />
            </form>
        </div>

    </div>



</div>
