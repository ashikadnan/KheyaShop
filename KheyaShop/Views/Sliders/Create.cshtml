@model SliderVM
@using KheyaShop.Data.ViewModels

<div class="row">
    <form enctype="multipart/form-data" asp-action="Create">
        <div class="form-group">
            <label class="custom-file-label" for="customFile">Upload Slider Image</label>
            <input asp-for="SliderImage" class="custom-file-input" id="customFile">
            <span asp-validation-for="SliderImage" class="text-danger"></span>
        </div>
        <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                <a class="btn btn-outline-info" asp-action="Index">Show All</a>
            </div>
    </form>
</div>

@section scripts{
<script type="text/javascript">

    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
}
